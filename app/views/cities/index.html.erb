<%= render 'shared/navbar' %>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url(https://images.unsplash.com/photo-1532299033990-5bcda4141d25?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=968&q=80);">
   <div class="centered ">
      <h1>Koffer</h1>
      <p>Pack your Koffer, fly the nest. Join the community!!</p>
    </div>
</div>

 <!-- search bar -->
  <form novalidate="novalidate" class="simple_form search " action="<%= cities_path %>" accept-charset="UTF-8" method="get"><input name="utf8" type="hidden" value="&#x2713;" />
    <div class="search-form-control form-group col-6">
      <input class="form-control string required " type="text" name="query" id="search_query" placeholder= 'Search for a city...' />
      <button name="button" type="submit" class="btn btn-flat">
        <div class="search-icon">
          <%= link_to cities_path, :class => 'fas fa-search ' do %>
            <span class="icon-home"></span>
          <% end %>
        </div>
      </button>
    </div>
  </form>
  <!-- search bar end -->

<div class="container">

  <!-- first card group -->
    <div class="container mt-4">
      <div class="row justify-content-between">
        <% @cities.each do |city| %>
          <div class=" col-sm-4 col-xs-12 ">
            <div class="container_foto mb-4">
              <%= link_to city do %>
              <div class="ver_mas text-center">
                  <span  class="lnr lnr-eye"></span>
              </div>
              <article class="text-left">
                  <h2><%= city.title %></h2>
                  <h4><%= city.country%></h4>
                  <% n = rand(3..5) %>
                  <% if city.title == 'Berlin' %>
                    <% 5.times do  %>
                      <span class="fas fa-star"></span>
                    <% end %>
                  <% else %>
                    <% n.times do  %>
                      <span class="fas fa-star"></span>
                    <% end %>
                    <% (5 - n).times do  %>
                      <span class="far fa-star"></span>
                    <% end %>
                  <% end %>
              </article>
              <%= cl_image_tag city.photo.key, crop: :fit %>
              <%end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <!-- first card group end -->

  <!-- map -->
  <div id="map"
      style="width: 100%; height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
  <!-- map -->




  <!-- do not delete it is for later js usage -->
  <ul id="results"></ul>
  <!-- do not delete end -->


